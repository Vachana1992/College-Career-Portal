                    <th>Targeted Programs</th>
                    <th>Location</th>
                    <th></th>
                    
        
                </tr>
                <%for(i=0;i<myjobs.length;i++){%>
                    <form action="/apply/job" method="POST">
                    <tr>
                        <td><strong><%=myjobs[i].id%></strong>&nbsp;</td>
                        <td><span><%=myjobs[i].company_name%></span>&nbsp;</td>
                        <td><span><%=myjobs[i].title%></span>&nbsp;</td>
                        <td><span><%=myjobs[i].application_procedure%></span>&nbsp;</td>

        <div>
            <table id="customers" >
                <tr>
                    <th>ID</th>
                    <th> Company Name</th>
                    <th>Title</th>
                    <th>Application Procedure</th>
                    <th>Documents Required</th>
                    <th>Description</th>
                    <th>Job Type</th>
